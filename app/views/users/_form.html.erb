<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('activerecord.errors.template.header', model: User.model_name.human, count: @user.errors.size) %></h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :preposition %><br>
    <%= f.text_field :preposition %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :birthdate %><br>
    <%= f.date_select :birthdate %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.text_field :gender %>
  </div>
  <div class="field">
    <%= f.label :hide_last_name %><br>
    <%= f.check_box :hide_last_name %>
  </div>
  <div class="field">
    <%= f.label :remember_emergency_contacts %><br>
    <%= f.check_box :remember_emergency_contacts %>
  </div>
  <div class="field">
    <%= f.label :remember_address %><br>
    <%= f.check_box :remember_address %>
  </div>
  <div class="field">
    <%= f.label :firstaid %><br>
    <%= f.check_box :firstaid %>
  </div>
  <div class="field">
    <%= f.label :bhv %><br>
    <%= f.check_box :bhv %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
