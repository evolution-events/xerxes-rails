<h1><%= t('series.listing') %></h1>

<table>
  <thead>
    <tr>
      <th><%= Series.human_attribute_name('name') %></th>
      <th><%= Series.human_attribute_name('url') %></th>
      <th><%= Series.human_attribute_name('email') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @series.each do |series| %>
      <tr>
        <td><%= series.name %></td>
        <td><%= series.url %></td>
        <td><%= series.email %></td>
        <td><%= link_to t('common.show'), series %></td>
        <td><%= link_to t('common.edit'), edit_series_path(series) %></td>
        <td><%= link_to t('common.destroy'), series, method: :delete, data: { confirm: t('common.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

